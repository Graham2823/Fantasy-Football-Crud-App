<%-include('include/_header')%>

<main id="view_team_main">
    <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>Front Page</a>
    </div>
    <div class="form-title">
        <h2>You are Viewing <%=  team.gm %>'s Team</h2>
        <h3>Here is <%= team.teamName %> Roster:</h3>
    </div>
    <div class="new_team_info">
        <div class="form-group">
            <table>
                <thead>
                    <tr>
                        <th>Team Name:</th>
                        <th>GM Name:</th>
                        <th> <form action= "/view_team/<%=index%>?_method=DELETE" method= "POST" ><button type="submit">
                            <i class="fas fa-cancel"></i>Delete Team</button>
                        </form></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="team_identification">
                        <td class="team_name"><label for="team_name"><%= team.teamName %></label></td>
                    <td><label for="team_GM"><%=  team.gm %></label></td>
                    </tr>
                </tbody>
         </table>
           </div>
    </div>
    <table class="table table-responsive view_table">
        <thead>
            <tr>
                <th>Position</th>
                <th>Player Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>QB:</td>
            <td><%= team.team.QB %></td>
        </tr>
        <tr>
            <td>RB:</td>
            <td><%= team.team.RB1 %></td>
        </tr>
        <tr>
            <td>RB:</td>
            <td><%= team.team.RB2 %></td>
        </tr>
        <tr>
            <td>Flex:</td>
            <td><%= team.team.Flex %></td>
        </tr>
        <tr>
            <td>WR:</td>
            <td><%= team.team.WR1 %></td>
        </tr>
        <tr>
            <td>WR:</td>
            <td><%= team.team.WR2 %></td>
        </tr>
        <tr>
            <td>TE:</td>
            <td><%= team.team.TE %></td>
        </tr>
        <tr>
            <td>Defense:</td>
            <td><%= team.team.Defense %></td>
        </tr>
        <tr>
            <td>Kicker:</td>
            <td><%= team.team.Kicker %></td>
        </tr>
    </tbody>
    </table>
    </main>
 

<%-include('include/_footer')%>